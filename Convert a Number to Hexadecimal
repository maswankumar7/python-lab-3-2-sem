class Solution:
    def toHex(self, num: int) -> str:
        if num == 0:
            return "0"

        num &= 0xFFFFFFFF  # force 32-bit

        hex_chars = "0123456789abcdef"
        result = []

        while num:
            result.append(hex_chars[num & 0xF])
            num >>= 4

        return "".join(reversed(result))
